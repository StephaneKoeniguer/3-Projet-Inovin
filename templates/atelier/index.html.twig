{% extends 'base.html.twig' %}

{% block title %}Atelier index{% endblock %}

{% block body %}
    <h1>Atelier index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Place</th>
                <th>Date</th>
                <th>Vin</th>
                <th>Commentaire</th>
            </tr>
        </thead>
        <tbody>
        {{ dump(ateliers)}}
        {% for atelier in ateliers %}
            <tr>
                <td>{{ atelier.id }}</td>
                <td>{{ atelier.place }}</td>
                <td>{{ atelier.date ? atelier.date|date('Y-m-d') : '' }}</td>
                {% for eachvin in atelier.vin %}
                <td>{{eachvin.nom}}</td>
                {% endfor %}
                <td>{{ atelier.commentaire }}</td>
                <td>
                    <a href="{{ path('app_atelier_show', {'id': atelier.id}) }}">show</a>
                    <a href="{{ path('app_atelier_edit', {'id': atelier.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_atelier_new') }}">Create new</a>
{% endblock %}
