<h1 class="title">La Boutique</h1>

{% for category, messages in app.flashes %}
    {% for message in messages %}
        <div class=" container-sm alert alert-{{ category }}">
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

<div class="section">
{% for vin in vins %}
<a href="#"/><div class="card">
    <img class="picture" src="{{ vich_uploader_asset(vin) }}" alt="{{ vin.nom }}">
    <div class="content">
        <h5 class="text">{{vin.nom}}</h5>
        <p>{{vin.region}}</p>
        <p>{{vin.millesime}}</p>
        <form action="{{ path('shop_add', { 'id': vin.id }) }}" method="POST">
            <button class="button" type="submit">Ajouter au panier</button>
            <input type="number" id="quantite" name="quantite" placeholder="0" min="1" max="20">
        </form>
    </div>
</div></a>
{% endfor %}
</div>

