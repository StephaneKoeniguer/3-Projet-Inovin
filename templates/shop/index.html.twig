{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Boutique en ligne {% endblock %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

<h1>La Boutique</h1>

{% for category, messages in app.flashes %}
    {% for message in messages %}
        <div class=" container-sm alert alert-{{ category }}">
        <button type="button" class="btn-close float-end" data-bs-dismiss="alert"></button>
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}


<div class="d-flex column-gap-3">
{% for vin in vins %}
<div class="card" style="width: 18rem;">
    <img src="{{ vich_uploader_asset(vin) }}" alt="{{ vin.nom }}">
    <div class="card-body">
        <h5 class="card-title">{{vin.nom}}</h5>
        <p class="card-text">{{vin.description}}</p>
        <p class="mt-3">
        <form action="{{ path('shop_add', { 'id': vin.id }) }}" method="POST">
            <button type="submit" class="btn btn-primary">Ajouter au panier</button>
            <div class="mt-3">
                <label for="quantite">Quantit√©:</label>
                <input type="number" id="quantite" name="quantite" placeholder="0" min="1" max="20">
            </div>
        </form>
        </p>
    </div>
</div>
{% endfor %}
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

{% endblock %}
