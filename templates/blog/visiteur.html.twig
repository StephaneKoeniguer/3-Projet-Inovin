{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Blog {% endblock title %}

{% block body %}
    {# <h1 class="blogH1">Blog</h1> #}
        <div class="blogDivContent">
            {% for blog in blogs %}
            <div class="blogDivCard">
                    <h2 class="blogTitle">{{ blog.title }}</h2>
                    <p class="blogDate">{{ blog.date ? blog.date|date('d-m-Y') : '' }}</p>
                    <p> <img class="blogImage" src="{{ vich_uploader_asset(blog) }}" alt="{{ blog.title }}"></p>
                    <p class="blogDescription">{{ blog.description }}</p>
                    <p class="blogShow"><a href="{{ path('app_blog_show_visiteur', {'id': blog.id}) }}">Lire plus</a></p>
            </div>
            {% else %}
                <h2 class="connexion">Pas d'articles pour le moment</h2>    
            {% endfor %}
        </div>
        

{% endblock %}
